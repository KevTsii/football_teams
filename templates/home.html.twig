{% extends 'base.html.twig' %}

{% trans_default_domain('app') %}

{% block title %}{{ 'app.home.title'|trans }}{% endblock %}

{% block content %}
    <div class="container text-center m-auto">
        <h1 class="display-4 text-dark fw-bold">{{ 'app.home.welcome'|trans({'%application_name%': application_name}) }}</h1>
        <p class="lead text-secondary mt-3">{{ 'app.home.description'|trans }}</p>
        <a href="{{ path('app_teams_create') }}" class="btn btn-primary mt-4">{{ 'create.content_title'|trans({'%context%': 'team'}, 'form') }}</a>
    </div>
{% endblock %}