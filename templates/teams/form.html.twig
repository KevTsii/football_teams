{% extends 'base.html.twig' %}

{% trans_default_domain('form') %}

{% set isEdit = ('app_teams_update' == app.current_route) %}

{% block title %}{{ isEdit ? team.name : 'create.tab_title'|trans({'%context%': 'team'}) }}{% endblock %}

{% block content %}
    <div class="container flex-fill m-auto w-25 pe-3">
        <div class="d-flex justify-content-center">
            <p class="mb-0 fs-3 fw-bold user-select-none">{{ isEdit ? 'edit.title'|trans({'%name%': team.name}) : 'create.content_title'|trans({'%context%': 'team'}) }}</p>
        </div>
        <div class="d-flex justify-content-center">
            <div class="w-50">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">{{ ('submit.'~(isEdit ? 'edit' : 'create'))|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}