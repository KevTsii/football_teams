{% extends 'base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('team') }}
{% endblock %}

{% block content %}
    <div class="container text-center m-auto pe-5 ps-0">
        <h2>{{ team.name }}</h2>
        <div class="d-flex justify-content-end mb-4">
            <a href="{{ path('app_players_create', {'team': team.id}) }}" class=" btn btn-warning edit-button me-2"><i class="fa fa-plus"></i>Add new player</a>
            <a href="{{ path('app_teams_update', {'team': team.id}) }}" class=" btn btn-success edit-button me-2">Edit</a>
            <button class=" btn btn-danger edit-button"><i class="fa fa-trash"></i></button>
        </div>
        <div class="d-block">
            <div class="d-flex justify-content-between">
                <div class="col-3">
                    <fieldset class="fieldset-with-legend rounded-3">
                        <legend>Money Balance</legend>
                        <p class="fs-4 mb-0">{{ team.moneyBalance|format_currency('USD') }}</p>
                    </fieldset>
                </div>
                <div class="col-3">
                    <fieldset class="fieldset-with-legend rounded-3">
                        <legend>Country</legend>
                        <p class="fs-4 mb-0">{{ team.country.name }}</p>
                    </fieldset>
                </div>
            </div>
            <div class="text-start mt-4">
                <h4 class="text-decoration-underline">Players</h4>
                <div>
                    <table id="players-table" class="text-center">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Joined on</th>
                            </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Joined on</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <input type="hidden" id="team-id" value="{{ team.id }}">
{% endblock %}